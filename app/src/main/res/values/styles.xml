<resources>

    <!-- Application's styles-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="buttonBarStyle">@style/AppTheme.Button</item>
        <item name="buttonBarButtonStyle">@style/AppTheme.Button</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
    </style>


    <!-- BUTTON STYLES -->

    <style name="AppTheme.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="AppTheme.RedButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/red_button_background</item>
        <item name="android:textColor">@drawable/red_button_text</item>
    </style>

    <style name="AppTheme.GreenButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:textColor">@drawable/green_button_text</item>
    </style>

    <style name="AppTheme.GrayButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/gray_button_background</item>
        <item name="android:textColor">@drawable/gray_button_text</item>
    </style>


    <!-- EDIT TEXT STYLES -->

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edit_text_text_size</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
    </style>


    <!-- TEXT VIEW STYLES -->

    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="AppTheme.TextView.DialogTitle">
        <item name="android:textColor">@color/dialog_title</item>
    </style>

    <style name="AppTheme.TextView.DialogMessage">

    </style>



    <!-- TODO: the below should be removed/replaced - they belong to old design -->



    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edit_text_text_size</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
    </style>

    <!-- TEXT VIEW STYLES -->

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="SmallSecondaryTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="LoginTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="RequestStatusTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="RequestLocationTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="RequestThumbnailNicknameTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="RequestThumbnailCreatedVotesTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">@dimen/smallest_text_size</item>
    </style>

    <style name="UserDetailsNicknameTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="UserDetailsReputationTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="VotePanelTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/smallest_text_size</item>
    </style>


    <style name="NavDrawerHeaderUserNicknameStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="NavDrawerHeaderUserReputationStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">@dimen/smallest_text_size</item>
    </style>

    <!-- TODO: the below styles should be removed/replaced - they belong to old design -->

    <style name="NicknameTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/nickname_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/date_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="ReputationTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/reputation_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="ReputationTextViewStyleSmall" parent="ReputationTextViewStyle">
        <item name="android:textSize">@dimen/tiny_text_size</item>
    </style>

    <style name="StatusTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="GreenTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="BoldTextStyleForButton" parent="DefaultTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>




</resources>
