<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:background="@drawable/border_background">

    <FrameLayout
        android:id="@+id/view_vote_down"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_vote_down"
            android:contentDescription="@string/btn_vote_down_accessibility" />

    </FrameLayout>

    <View
        android:layout_width="@dimen/divider_width"
        android:layout_height="@dimen/vote_panel_divider_height"
        android:background="@color/divider_color"/>

    <Space
        android:layout_width="@dimen/vote_panel_spacing"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_green"/>

    <Space
        android:layout_width="@dimen/vote_panel_spacing"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txt_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/UserDetailsReputationTextViewStyle"/>

    <Space
        android:layout_width="@dimen/vote_panel_spacing"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="@dimen/divider_width"
        android:layout_height="@dimen/vote_panel_divider_height"
        android:background="@color/divider_color"/>

    <FrameLayout
        android:id="@+id/view_vote_up"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_vote_up"
            android:contentDescription="@string/btn_vote_up_accessibility" />

    </FrameLayout>

</LinearLayout>