<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_gray"/>
            <corners android:radius="@dimen/button_corners_radius"/>
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/button_gray"/>
        </shape>
    </item>

    <item android:state_enabled="false" android:alpha="0.5">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="@dimen/button_corners_radius"/>
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/button_gray"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="@dimen/button_corners_radius"/>
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/button_gray"/>
        </shape>
    </item>
</selector>